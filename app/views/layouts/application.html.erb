<!DOCTYPE html>
<html>
  <head>
    <title>Delaware County EMS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
      <%= link_to "Delaware County EMS", root_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav">
        <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Contact", contact_us_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "The Resus Bay", theresusbay_path, class: "nav-link" %></li>
        <li class="nav-item float-md-right"><%= link_to "Log Out", signout_path, method: :delete,class: "nav-link" %></li>
        <li class= "nav-item float-sm-right"><%= link_to "Sign up", signup_path, class: "btn btn-primary" %></li>
        <li class= "nav-item float-sm-right"><%= link_to "Sign in", signin_path, class: "nav-link" %></li>
      </ul>
    </nav>

    <!--Flash Message-->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>
    <!-- Page Content -->
    <div class="container">
      <%= yield %>

    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Copyright 2016</p>
        </center>
      </div>
    </footer>
    </div>

  </body>
</html>
