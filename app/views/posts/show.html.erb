<div class="container">
	<p id="notice"><%= notice %></p>

	<h2>Add a comment:</h2>
	<%= form_for([@post, @post.comments.build]) do |f| %>

	  <div class="field">
	    <%= f.label :post_id %><br />
	    <%= f.text_field :post_id %>
	  </div>

	  <div class="field">
	    <%= f.label :body %><br />
	    <%= f.text_area :body %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>

	<% end %>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>

	<h2>Comments</h2>
	<% @post.comments.each do |comment| %>

	  <p>
	    <b>Commenter:</b>
	    <%= comment.post_id %>
	  </p>
	  <p>
	    <b>Comment:</b>
	    <%= comment.body %>
	  </p>

	<% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
